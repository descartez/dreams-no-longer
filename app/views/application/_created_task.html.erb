<h2><%= task.title %></h2>
<p><%= task.task %></p>
<p>Done? <%= task.done %></p>
<p>Progress: <%= task.progress %></p>
  <%= button_to 'Check Task', finish_task_path(id: task.id), class: 'btn btn-default pull-left', method: :get, remote: true %>
  <%= button_to 'Delete', task_path(id: task.id), class: 'btn btn-default pull-left', method: :delete, remote: true  %>
  <%= button_to 'Edit', edit_task_path(id: task.id), class: 'btn btn-default pull-left', method: :get, remote: true %>